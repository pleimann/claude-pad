{
  "description": "Forward Claude Code notifications to camel-pad device",
  "hooks": {
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/notify.js",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
